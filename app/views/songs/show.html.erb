<div class="container">
<p id="notice"><%= notice %></p>

<h1>Song</h1>

<p>
  <strong>Name:</strong>
  <%= @song.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @song.artist.name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @song.year %>
</p>

<p>
  <strong>Album:</strong>
  <%= @song.album %>
</p>

<p>
  <%= image_tag(@song.image.url, class: "thumbnail right") %>
</p>

<%= link_to 'Back', artist_path(@song.artist.id), class: "btn btn-default btn-lg" %>
<%= link_to 'Edit', edit_song_path(@song), class: "btn btn-default btn-lg" %>
</div>
