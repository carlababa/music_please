    <%= f.select :artist_id, options_from_collection_for_select(@artists, "id", "name", selected: @song.artist_id) %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :album %><br>
    <%= f.text_field :album %>
  </div>
  <div class="field">
    <p>
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </p>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
  <br/>
<% end %>
