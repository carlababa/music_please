<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Album</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.name, song %></td>
        <td><%= song.artist.name %></td>
        <td><%= song.year %></td>
        <td><%= song.album %></td>
        <td class="thumbnail"><%= link_to image_tag(song.image.url), song %></td>
        <!-- <td><%= link_to 'Show', song %></td> -->
        <!-- <td><%= link_to 'Edit', edit_song_path(song) %></td> -->
        <!-- <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path, class: "btn btn-default btn-lg" %> |
